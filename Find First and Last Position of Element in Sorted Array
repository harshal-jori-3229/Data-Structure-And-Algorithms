var searchRange = function(nums, target) {
    function inner(nums, target, findFirst){
        let n = nums.length;
        let left = 0;
        let right = n-1;
        let result = -1;

        while(left <= right){
            let mid = Math.floor(left + (right-left)/2);

            if(nums[mid] === target){
                result = mid;
                if(findFirst){
                    right = mid - 1;
                }else{
                    left = mid + 1;
                }
            }else if(nums[mid] < target){
                left = mid + 1;
            }else{
                right = mid - 1;
            }
        }
        return result;
    }
    const first = inner(nums, target, true);
    const last = inner(nums, target, false);
    return [first, last]
};
