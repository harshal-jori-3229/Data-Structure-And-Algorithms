var mergeKLists = function(lists) {
     let values = [];
    
    for(let node of lists){
        while(node){
            values.push(node.val);
            node = node.next;
        }
    }
    values.sort((a,b) => a - b);
    
    let dummy = new ListNode(0);
    let current = dummy;
    
    for(let val of values){
        current.next = new ListNode(val);
        current = current.next;
        
    }
    return dummy.next;
};
